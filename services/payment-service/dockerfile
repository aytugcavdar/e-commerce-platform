# Base image
FROM node:18-alpine

# Ortam değişkenlerini ayarla (önerilir)
ENV NODE_ENV=production

WORKDIR /app

# Önce sadece bağımlılıkları kopyala ve kur (Docker katman önbelleğinden yararlanmak için)
COPY package*.json ./
COPY shared-utils/package*.json ./shared-utils/
RUN npm install --omit=dev # Sadece production bağımlılıklarını kur

# Paylaşılan yardımcıları kopyala
COPY shared-utils ./shared-utils

# Payment service kodunu kopyala
COPY services/payment-service ./services/payment-service

# Çalışma dizinini payment service yap
WORKDIR /app/services/payment-service

# Servisin dışarıya açılmasına GEREK YOK, sadece RabbitMQ ile konuşacak.
# EXPOSE 5004

# Health check (isteğe bağlı, eğer HTTP endpoint varsa)
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD node -e "require('http').get('http://localhost:${PAYMENT_SERVICE_PORT:-5004}/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})" || exit 1

# Servisi başlat
CMD ["node", "server.js"]